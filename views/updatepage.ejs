<%- include('partials/header.ejs') %>





<main class="container">
    <div class="p-4 p-md-5 mb-4 rounded text-body-emphasis bg-body-secondary">
      <div class="col-lg-12 px-0">
        <h1 class="display-4 fst-italic">Update your Post Here!</h1>
        <p class="lead my-3">Currently editing post <%= heading %> </p>
        <form action="/update" method="POST">
            
            <textarea class='form-control' rows = "1" cols = "60" name='author' required><%= author %></textarea><br>
            <textarea class='form-control' rows = "1" cols = "60" name='heading' required><%= heading %></textarea><br>

            <textarea class='form-control' rows = "5" cols = "60" name='content' required><%= content %></textarea><br>
            <button class="btn btn-primary" type="submit" name="updatepost" value="<%= heading %>">Update Post!</button>
        </form>
        <hr>
        
      </div>
    </div>







<%- include('partials/footer.ejs') %>